@page
@model RubberDuckStore.Pages.OrderFormModel
@{
    ViewData["Title"] = "Order Form";
}

<h1>Order Form for @Model.Duck.Name</h1>

<form method="post">
    <input type="hidden" asp-for="Order.DuckId" />
    <div class="form-group">
        <label asp-for="Order.CustomerName">Your Name:</label>
        <input asp-for="Order.CustomerName" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Order.CustomerEmail">Your Email:</label>
        <input asp-for="Order.CustomerEmail" class="form-control" required type="email" />
    </div>
    <div class="form-group">
        <label asp-for="Order.Quantity">Quantity:</label>
        <input asp-for="Order.Quantity" class="form-control" required type="number" min="1" value="1" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Complete Order</button>
</form>